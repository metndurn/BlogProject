@model List<Blog>/*burada önyuz ıcın tanımlamalar yapıldı liste halinde gosterıldı ve asagıda gerekenler verı tabanından alındı*/

@*buradaki kodların hepsinin çalısması ıcın backend kodlarının yazılması lazım yanı controller olması gerekıyor unutma*@
<div class="mainbar">
    @foreach (var item in Model)/*liste elemanı ile ile veri tabanındakı herseyi yani kac tane blog varsa burada listeledık*/
    {
        <div class="article">
            <h2><span>@item.Name</span></h2>
            <div class="clr"></div>
            @*@item.PublishDate.ToString("MM/yyyy HH:mm") hem ay hemde saat tarıhını verdırdık*@
            <p><span class="date">@item.PublishDate.ToString("MMMM d\\t\\h, yyyy 'at' h:mm tt")</span> |&nbsp; Etiketler <a href="#">@item.Tags</a></p>
            @*<img src="images/img1.jpg" width="625" height="205" alt="" />*@
            <img src="@item.ImageUrl" width="625" height="205" alt="" />
            @*asagıda blog yazısının ne kadarı anasayfada gorunmesı gerektıgını yazmıs olduk if ve dongu yapısı kullanıldı*@
            @{
                string description = item.Description;
                string newdescription = description.Length > 50 ? description.Substring(0, 250) + " ... " : description;
            }
         <p>@newdescription</p>
         <p class="spec"><a href="/Blogs/Details?id=@item.Id" class="rm">Devamını Oku &raquo;</a>@*burada hrefteki ? işareti ile id'ye gore istedik*@
             <a href="#" class="com" style="margin-left:5px;"><span>@item.CommentCount</span> Comments</a>
             <a href="#" class="com" style="margin-left:5px;"><span>@item.LikeCount</span> Like</a>
             <a href="#" class="com" style="margin-left:5px;"><span>@item.ViewCount</span> View</a>
         </p>
     </div>
  }
</div>
